<%= partial(:menu) %>

<br/>

<div class="copy">
<div id='contact_area'>
	
<h2 id='contact_us'>Contact Us</h2>
	<div class='flash success'></div>
	
	<% if @errors %>
		<% @errors.each do |error| %>
			<div id='flash_err'>
			  <%= error[1] %>
			</div>
		<% end %>
	<% end %>

	<form method='post' url='http://ligercat.ubio.org/about'>
		<fieldset class='message'>
			<legend>Email Form</legend>
			<table class='simple'>
				<tr><td><label for='email_sender'>E-mail Address:</label><div class='error'></div></td>
					<td colspan=2><input class='textbox' id='email_sender' name='email_sender' type='text' /></td>
				</tr>
				<tr><td><label for='email_message'>Message:</label>
				<div class='error'></div></td>
				<td colspan=2><textarea class='' id='email_message' name='email_message' type='text'></textarea></td>
			</tr>
		</fieldset>
		<fieldset class='recaptcha'>
			<tr><td colspan=2><label for='recaptcha_response_field'>Please enter the word:</label>
			<div class='error'></div></td>
			<td class='middle'><%= captcha_image_tag %>&nbsp;<%= captcha_answer_tag %></td>
			</tr>
			<!-- <tr><td></td><td colspan=2><%#= captcha_answer_tag %></td></tr> -->
		</fieldset>
		</table>
		<fieldset class='buttons'>
				<input class='submit' type='submit' value='Submit' />
		</fieldset>
	</form>

	</div>
</div>
</div> 
<!-- end copy -->
</div>
