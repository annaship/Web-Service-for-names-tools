<div class="copy">
<div id='contact_area'>
	
<h2 id='contact_us'>Contact Us</h2>
	<div class='flash success'></div>
	
	<% if @errors %>
		<br />
		<div id='flash_err'>
		  <%= @errors[:sender] %>
		<br />
		  <%= @errors[:message] %>		
		</div>
	<br />
	<% end %>

	<form method='post' url='http://ligercat.ubio.org/about'>
		<fieldset class='message'>

			<legend>Email Form</legend>
			<table class='simple'>
				<tr><td><label for='email_sender'>E-mail Address:</label><div class='error'></div></td>
					<td><input class='textbox' id='email_sender' name='email_sender' type='text' /></td>
				</tr>
				<tr><td><label for='email_message'>Message:</label>
				<div class='error'></div></td>
				<td><textarea class='' id='email_message' name='email_message' type='text'></textarea></td>
			</tr>
		</fieldset>
		<fieldset class='recaptcha'>
			<tr><td colspan=2><label for='recaptcha_response_field'>Please enter the two words below:</label>
			<div class='error'></div></td></tr>
			<tr><td></td><td>
				<script type="text/javascript">
				var RecaptchaOptions = {"theme":"clean"};

				</script>
					<script type="text/javascript" src="http://api.recaptcha.net/challenge?k=6LfYQwcAAAAAADEL1aBd2qTA1bGJaie9DijCQEPE&amp;amp;error=">
				</script>
				<noscript>
			  <iframe height="300" src="http://api.recaptcha.net/noscript?k=6LfYQwcAAAAAADEL1aBd2qTA1bGJaie9DijCQEPE" width="500" frameborder="0">
			  </iframe>
			</td></tr>
			  <!-- <br/> -->
			<tr><td colspan=2>
			  <textarea cols="40" rows="3" name="recaptcha_challenge_field"></textarea>
			  <input type="hidden" value="manual_challenge" name="recaptcha_response_field"/>
			</noscript>
			</td></tr>
		</fieldset>
		</table>
		<fieldset class='buttons'>
				<input class='submit' type='submit' value='Submit' />
		</fieldset>
	</form>

	</div>
</div>
</div> 
